---
eleventyComputed:
  title: Tagged "{{ tag.tagName }}"
layout: layouts/home.njk
pagination:
  data: collections.tags_4x4
  size: 1
  alias: tag
  addAllPagesToCollections: true
permalink: "/{{ lang }}/tags/{{ tag.tagName | slugify }}/{% if tag.pageNumber %}{{ page_prefix }}{{ tag.pageNumber + 1 }}/{% endif %}"
segments:
  - url: /blog/
    title: Blog
---
{% include "components/breadcrumb.njk" %}

<div class="fr-grid-row fr-grid-row--gutters">
  <div class="fr-col-12 fr-col-md-3">
    <div class="fr-sidemenu__title"> {{ "tags" | i18n }}</div>
    {% set tags = collections.all | getAllTags | filterTagList([tag.tagName]) %}
    {% include "components/taggroup.njk" %}
  </div>
  <div class="fr-col-12 fr-col-md-9">
    <p>
      <a href="{{ "/blog/"| locale_url }}" class="fr-tag fr-fi-close-line fr-tag--icon-left" target="_self">{{ tag.tagName }}</a>
    </p>
    {% set postslist = tag.pageData %}
    {% include "postslist.njk" %}
  </div>
</div>

{% set tagUrl %}{{ "/tags/"| locale_url }}{{ tag.tagName | slugify }}/{% endset %}
{% set pagination = pagination | pagination_object(tagUrl) %}
{% include "components/pagination.njk" %}
